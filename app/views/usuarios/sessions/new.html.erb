<body style="background-color:#f24472">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div id="login">
          </br></br></br></br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-md-12">
              <%= f.email_field :email, autofocus: true, :placeholder => "email", :class => 'form-control componentesLogin' %>
            </div></br>

            <div class="col-md-12">
              <%= f.password_field :password, autocomplete: "off", :placeholder => "senha", :class => 'form-control componentesLogin' %>
            </div></br>

            <%= f.submit "", :hidden => true %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>